    #     on_release: root.dismiss()#popup built in function

<MyLayout>
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

        Label:
            text: "Popub Stuff"
            font_size: 32

        Button:
            text: "Popup"
            font_size: 32
            on_release:Factory.MyPopup().open()