#:import utils kivy.utils


<MyGridLayout>
    
    name:name
    pizza:pizza
    color:color

    GridLayout:
        cols:1
        size:root.width,root.height
        GridLayout:
            cols:2

            Label:
                text:"Name"
            TextInput:
                id:name
                multiline:False
                background_color:utils.get_color_from_hex('#fa00df')
            Label:
                text:"Favorite Pizza"
            TextInput:
                id:pizza
                multiline:False    

            Label:
                text:"Favorite color"
            TextInput:
                id:color
                multiline:False    
        Button:
            text:"Submit"
            font_size:32
            on_press:root.press()
            #RGBA
            background_normal:''
            #background_color:(238/255.0,250/255.0,0,1)
            background_color:utils.get_color_from_hex('#fa00df')